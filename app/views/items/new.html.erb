<% provide(:title, 'Add Item') %>
<h1>Add Item</h1>

<%= form_for(@item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>

  <br>
  <%= f.submit 'Create Item' %>
<% end %>